{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "@mate-academy/eslint-config",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "warn",
    "operator-linebreak": "off",
    "space-before-function-paren": "off"
  },
  "prettier/prettier": [
    "error",
    {},
    {
      "usePrettierrc": false
    }
  ]
}
